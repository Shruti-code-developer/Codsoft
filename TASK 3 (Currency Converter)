import java.util.Scanner;

public class CurrencyConverter {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Currency Converter");
        System.out.println("1. USD to INR");
        System.out.println("2. INR to USD");
        System.out.println("3. EUR to INR");
        System.out.println("4. INR to EUR");
        System.out.println("5. Exit");

        while (true) {
            System.out.print("Enter your choice: ");
            int choice = scanner.nextInt();

            if (choice == 5) {
                break;
            }

            System.out.print("Enter amount: ");
            double amount = scanner.nextDouble();

            switch (choice) {
                case 1:
                    System.out.println(amount + " USD = " + usdToInr(amount) + " INR");
                    break;
                case 2:
                    System.out.println(amount + " INR = " + inrToUsd(amount) + " USD");
                    break;
                case 3:
                    System.out.println(amount + " EUR = " + eurToInr(amount) + " INR");
                    break;
                case 4:
                    System.out.println(amount + " INR = " + inrToEur(amount) + " EUR");
                    break;
                default:
                    System.out.println("Invalid choice");
            }
        }

        scanner.close();
    }

    private static double usdToInr(double amount) {
        // 1 USD = 82.55 INR (approximate)
        return amount * 82.55;
    }

    private static double inrToUsd(double amount) {
        // 1 INR = 0.0121 USD (approximate)
        return amount * 0.0121;
    }

    private static double eurToInr(double amount) {
        // 1 EUR = 88.30 INR (approximate)
        return amount * 88.30;
    }

    private static double inrToEur(double amount) {
        // 1 INR = 0.0113 EUR (approximate)
        return amount * 0.0113;
    }
}
